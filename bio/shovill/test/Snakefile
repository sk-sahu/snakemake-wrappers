rule shovill:
  input:
    r1="reads/input_R1.fq.gz",
    r2="reads/input_R2.fq.gz",
  output:
    raw_assembly="assembly/raw_assembly.fa",
    contigs="assembly/contigs.fa"
  params:
    assembler="spades",
    extra=""
  log:
    "logs/shovill/job.log"
  threads: 1
  wrapper:
    "master/bio/shovill"
